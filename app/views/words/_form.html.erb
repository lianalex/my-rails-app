<%= form_with model: @word do |form| %>
  <div>
    <%= form.label :image %><span> upload file</span><br>
    <%= form.file_field :image %>
	<% @word.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
	<% @word.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>