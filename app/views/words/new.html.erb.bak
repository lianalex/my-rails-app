<h1>New Word</h1>

<%= form_with model: @word do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
	<% @word.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :p1 %><br>
    <%= form.text_area :p1 %>
	<% @word.errors.full_messages_for(:p1).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :p2 %><br>
    <%= form.text_area :p2 %>
	<% @word.errors.full_messages_for(:p2).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>