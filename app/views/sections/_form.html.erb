<%= form_with model: [ @word, @word.sections.build ] do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :tag %><br>
    <%= form.select :tag, ["h1", "h2", "h3", "h4", "h5", "h6", "p"] %>
  </p>  
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>