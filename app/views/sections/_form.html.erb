<%= form_with model: [ @word, @word.sections.build ] do |form| %>
  <p>
    <%= form.label :tag %><br>
    <%= form.select :tag, ["h1", "h2", "h3", "h4", "h5", "h6", "p", "a"] %>
  </p>  
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <div>
	<%= form.label :isLink, "Is this a hyperlink? " %>
	<%= form.check_box :isLink %>	
  </div>
  <div>
    <%= form.label :hyperlink, "Enter Hyperlink here: " %><br>
    <%= form.url_field :hyperlink %><br>
	<i><%= "*Leave blank if this section is not a hyperlink" %></i>
  </div>
  <p>
    <%= form.submit %>
  </p>
<% end %>